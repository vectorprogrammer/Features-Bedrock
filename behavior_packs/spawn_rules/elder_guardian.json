{
  "format_version": "1.21.0",
  "minecraft:spawn_rules": {
    "description": {
      "identifier": "minecraft:elder_guardian",
      "population_control": "monster"
    },
    "conditions": [
      {
        // Use structure_filter to ensure spawning only happens inside the monument
        "minecraft:structure_filter": {
          "structure_id": "ocean_monument",
          "block_filters": [
            "minecraft:prismarine"
          ],
          "allow_inside": true,
          "allow_outside": false
        },
        "minecraft:spawns_on_block_filter": {
          "blocks": [
            "minecraft:water" // Ensure it spawns in water blocks
          ]
        },
        "minecraft:spawns_underwater": {},
        "minecraft:weight": {
          "default": 15 // This sets the 15% relative chance (compared to a total pool weight of 100)
        },
        "minecraft:density_limit": {
          "surface": 5 // Prevents an excessive number of Elder Guardians from spawning
        }
      }
    ]
  }
}
